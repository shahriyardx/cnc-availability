// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lineup {
  id              String         @id @default(cuid())
  team            String
  day             String
  time            String
  left_wing       BigInt
  right_wing      BigInt
  left_defense    BigInt
  right_defense   BigInt
  center          BigInt
  goalie          BigInt
  message_id_cnc  BigInt?
  message_id_team BigInt?
  lineups         PlayerLineup[]
}

model PlayerLineup {
  id        String @id @default(cuid())
  member_id BigInt
  week      Int
  year      Int
  Lineup    Lineup @relation(fields: [lineupId], references: [id])
  lineupId  String
}

model Settings {
  id                 String  @id @default(cuid())
  can_submit_lineups Boolean @default(true)
  can_edit_lineups   Boolean @default(true)
  tasks_enabled      Boolean @default(true)
  playofss           Boolean @default(false)
}

model Availability {
  id        String @id @default(cuid())
  member_id BigInt
  games     Int
}

model Game {
  id   String @id @default(cuid())
  week Int
  data String
}
